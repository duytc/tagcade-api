<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Tagcade\Entity\Site" table="sites">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <field name="name" column="name" type="string" length="100" />
        <field name="domain" column="domain" type="string" length="255" />
        <many-to-one field="publisher" target-entity="Tagcade\Bundle\UserBundle\Entity\User">
            <join-column name="publisher_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>